# Environment Variables Template for Qenergyz Platform

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://qenergyladmin:your-secure-password@localhost:5432/qenergyz
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qenergyz
DB_USERNAME=qenergyladmin
DB_PASSWORD=your-secure-password

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_SSL=false

# Redis Pool Settings
REDIS_POOL_SIZE=10
REDIS_CONNECTION_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Keys
ENCRYPTION_KEY=your-encryption-key-32-bytes-long
FERNET_KEY=your-fernet-key-for-symmetric-encryption

# Password Hashing
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_UPPERCASE=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@qenergyz.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true
FROM_EMAIL=noreply@qenergyz.com

# Sentry Configuration (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# CLOUD SERVICES (AWS/GCP/AZURE)
# =============================================================================

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=qenergyz-app-storage
AWS_ECR_REGISTRY=123456789.dkr.ecr.us-east-1.amazonaws.com

# AWS Secrets Manager
AWS_SECRETS_MANAGER_ENABLED=true
AWS_SECRETS_PREFIX=qenergyz/production

# GCP Configuration
GOOGLE_CLOUD_PROJECT=qenergyz-project
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_STORAGE_BUCKET=qenergyz-gcp-storage

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_STORAGE_ACCOUNT=qenergyzstorage
AZURE_KEY_VAULT_URL=https://qenergyz-kv.vault.azure.net/

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Ethereum Configuration
ETH_RPC_URL=https://mainnet.infura.io/v3/your-infura-project-id
ETH_PRIVATE_KEY=your-ethereum-private-key
ETH_CONTRACT_ADDRESS=0x1234567890abcdef1234567890abcdef12345678

# Web3 Provider Settings
WEB3_PROVIDER_TIMEOUT=30
WEB3_AUTO_RETRY=true
WEB3_MAX_RETRIES=3

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# TensorFlow Configuration
TF_CPP_MIN_LOG_LEVEL=2
TF_ENABLE_GPU=false

# Quantum Computing (Qiskit)
QISKIT_IBMQ_TOKEN=your-ibmq-token
QISKIT_BACKEND=qasm_simulator

# OpenAI Configuration (if using)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# =============================================================================
# IOT CONFIGURATION
# =============================================================================

# MQTT Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=qenergyz_iot
MQTT_PASSWORD=your-mqtt-password
MQTT_TLS_ENABLED=false

# Modbus Configuration
MODBUS_HOST=192.168.1.100
MODBUS_PORT=502
MODBUS_TIMEOUT=5

# OPC UA Configuration
OPCUA_ENDPOINT=opc.tcp://192.168.1.200:4840
OPCUA_USERNAME=opcua_user
OPCUA_PASSWORD=opcua_password

# =============================================================================
# FINANCIAL SERVICES
# =============================================================================

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Financial Data Providers
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
QUANDL_API_KEY=your-quandl-api-key
BLOOMBERG_API_KEY=your-bloomberg-api-key

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================

# KYC/AML Configuration
JUMIO_API_TOKEN=your-jumio-api-token
JUMIO_API_SECRET=your-jumio-api-secret
JUMIO_DATACENTER=US

# Regulatory Settings
COMPLIANCE_MODE=STRICT
ENABLE_TRANSACTION_MONITORING=true
MAX_DAILY_TRANSACTION_LIMIT=1000000
KYC_REQUIRED_AMOUNT=10000

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8090

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_DETAILED=true

# Metrics Collection
COLLECT_BUSINESS_METRICS=true
METRICS_RETENTION_DAYS=30

# =============================================================================
# MESSAGING CONFIGURATION
# =============================================================================

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=qenergyz-consumers
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate Limiting Configuration
RATE_LIMITING_ENABLED=true
DEFAULT_RATE_LIMIT=100/minute
AUTHENTICATED_RATE_LIMIT=1000/minute
PREMIUM_RATE_LIMIT=10000/minute

# =============================================================================
# FILE STORAGE
# =============================================================================

# Local File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_EXTENSIONS=pdf,doc,docx,xls,xlsx,csv

# CDN Configuration
CDN_URL=https://cdn.qenergyz.com
CDN_ENABLED=false

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================

# Testing Configuration
TESTING=false
TEST_DATABASE_URL=postgresql://qenergyladmin:password@localhost:5432/qenergyz_test
PYTEST_CURRENT_TEST=

# Development Tools
ENABLE_PROFILER=false
DEBUG_TOOLBAR=false
MOCK_EXTERNAL_APIS=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Connection Pool Settings
MAX_DB_CONNECTIONS=100
DB_CONNECTION_TIMEOUT=30
HTTP_CLIENT_TIMEOUT=30
HTTP_CLIENT_POOL_SIZE=100

# Caching Settings
CACHE_TTL_DEFAULT=3600  # 1 hour
CACHE_TTL_USER_DATA=1800  # 30 minutes
CACHE_TTL_MARKET_DATA=60  # 1 minute

# Background Task Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# =============================================================================
# REGIONAL CONFIGURATION
# =============================================================================

# Localization
DEFAULT_TIMEZONE=UTC
DEFAULT_LOCALE=en_US
SUPPORTED_LANGUAGES=en,ar,fr,es

# Currency Settings
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,AED,CAD

# Regional Compliance
ENABLE_SHARIA_COMPLIANCE=false
ENABLE_GDPR_COMPLIANCE=true
ENABLE_CCPA_COMPLIANCE=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Container Configuration
CONTAINER_NAME=qenergyz-backend
CONTAINER_PORT=8000
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Auto Scaling
MIN_REPLICAS=2
MAX_REPLICAS=10
TARGET_CPU_UTILIZATION=70

# =============================================================================
# SECRETS MANAGEMENT
# =============================================================================

# Note: In production, these should be retrieved from:
# - AWS Secrets Manager
# - Azure Key Vault  
# - GCP Secret Manager
# - HashiCorp Vault
# Never store actual secrets in environment files!

SECRETS_PROVIDER=aws_secrets_manager  # or azure_key_vault, gcp_secret_manager, vault
SECRETS_PREFIX=qenergyz/production
SECRETS_REGION=us-east-1