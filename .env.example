# Database Configuration
DB_URL=postgresql://username:password@localhost:5432/qenergyz_dev

# API Keys - External Data Providers
NYMEX_API_KEY=your_nymex_api_key_here
NYMEX_API_SECRET=your_nymex_api_secret_here
ICIS_API_KEY=your_icis_api_key_here
ICIS_API_SECRET=your_icis_api_secret_here
OPENWEATHER_API_KEY=your_openweather_api_key_here
EXXON_API_KEY=your_exxon_api_key_here
EXXON_API_SECRET=your_exxon_api_secret_here

# Security Keys
SECRET_KEY=your_secret_key_for_jwt_and_encryption_here
ENCRYPTION_KEY=your_encryption_key_for_data_at_rest
HSM_CONFIG=your_cloud_hsm_configuration

# Regional Configuration
REGION=middle_east
# Supported regions: middle_east, usa, uk, europe, guyana
TIMEZONE=Asia/Dubai
LOCALE=en_US
CURRENCY=AED

# AI/ML Configuration
GROK_API_KEY=your_grok_api_key_here
OPENAI_API_KEY=your_openai_api_key_for_fallback
QISKIT_IBM_TOKEN=your_qiskit_ibm_quantum_token
TENSORFLOW_SERVING_URL=http://localhost:8501

# Analytics and Monitoring
ANALYTICS_KEY=your_analytics_tracking_key
SENTRY_DSN=your_sentry_dsn_for_error_tracking
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Message Queues and Caching
REDIS_URL=redis://localhost:6379/0
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# IoT Integration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=iot_user
MQTT_PASSWORD=iot_password
OPC_UA_SERVER_URL=opc.tcp://localhost:4840
MODBUS_TCP_HOST=localhost
MODBUS_TCP_PORT=502

# Blockchain and Web3
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-project-id
WEB3_PRIVATE_KEY=your_web3_private_key_for_transactions
BLOCKCHAIN_NETWORK=mainnet
# Options: mainnet, testnet, polygon, bsc

# Email and Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@company.com
SMTP_PASSWORD=your_email_password
SLACK_WEBHOOK_URL=your_slack_webhook_url
TEAMS_WEBHOOK_URL=your_teams_webhook_url

# Compliance and Regulatory
AML_API_KEY=your_aml_screening_api_key
KYC_API_KEY=your_kyc_verification_api_key
COMPLIANCE_WEBHOOK_URL=your_compliance_update_webhook
SHARIA_COMPLIANCE_API=your_sharia_compliance_api_key

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=qenergyz-storage
AWS_REGION=us-east-1

# Development and Testing
ENVIRONMENT=development
# Options: development, staging, production
DEBUG=true
LOG_LEVEL=INFO
MOCK_MODE=true
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/qenergyz_test

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=3600
RATE_LIMIT_BURST=10

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_SIZE_LIMIT=1048576

# Backup and Disaster Recovery
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
DR_REGION=us-west-2

# Feature Flags
ENABLE_QUANTUM_COMPUTING=false
ENABLE_AI_ESG_SCORING=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_IOT_INTEGRATION=true
ENABLE_BLOCKCHAIN_AUDITING=true

# Multi-tenancy
DEFAULT_TENANT=qenergyz_main
TENANT_ISOLATION=strict

# Performance and Scaling
MAX_WORKERS=4
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT=30
CACHE_TTL=3600