# API Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
VITE_BACKEND_VERSION=v1

# Regional Configuration
VITE_REGION=middle_east
# Supported regions: middle_east, usa, uk, europe, guyana
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,ar
VITE_DEFAULT_CURRENCY=AED
VITE_DEFAULT_TIMEZONE=Asia/Dubai

# Analytics and Monitoring
VITE_ANALYTICS_KEY=your_analytics_key_here
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_MIXPANEL_TOKEN=your_mixpanel_token_here
VITE_AMPLITUDE_API_KEY=your_amplitude_api_key

# AI/ML Integration
VITE_GROK_API_KEY=your_grok_api_key_here
VITE_OPENAI_API_KEY=your_openai_api_key_for_fallback
VITE_AI_ASSISTANT_ENABLED=true

# Error Tracking and Monitoring
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1

# Authentication & Security
VITE_AUTH_PROVIDER=oauth2
VITE_OAUTH_CLIENT_ID=your_oauth_client_id
VITE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback
VITE_MFA_ENABLED=true
VITE_SESSION_TIMEOUT=1800000
# Options: oauth2, saml, ldap

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_TRADING_MODULE=true
VITE_ENABLE_RISK_MODULE=true
VITE_ENABLE_IOT_DASHBOARD=true
VITE_ENABLE_COMPLIANCE_MODULE=true
VITE_ENABLE_AI_INSIGHTS=true
VITE_ENABLE_BLOCKCHAIN_TRACKING=true
VITE_ENABLE_ESG_SCORING=true

# WebSocket Configuration  
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_HEARTBEAT_INTERVAL=30000

# API Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_BURST_LIMIT=20
VITE_API_TIMEOUT=30000

# Development Configuration
VITE_NODE_ENV=development
VITE_DEBUG_MODE=true
VITE_MOCK_API=false
VITE_ENABLE_DEVTOOLS=true

# Performance Monitoring
VITE_PERFORMANCE_MONITORING=true
VITE_BUNDLE_ANALYZER=false
VITE_SOURCE_MAPS=true

# PWA Configuration
VITE_ENABLE_PWA=true
VITE_PWA_CACHE_STRATEGY=CacheFirst
VITE_OFFLINE_SUPPORT=true

# Security Headers
VITE_CSP_ENABLED=true
VITE_HSTS_ENABLED=true
VITE_CONTENT_TYPE_OPTIONS=nosniff

# Multi-tenancy
VITE_DEFAULT_TENANT=qenergyz_main
VITE_TENANT_ISOLATION=strict

# Compliance and Regulatory
VITE_GDPR_ENABLED=true
VITE_CCPA_ENABLED=true
VITE_SHARIA_COMPLIANCE=true
VITE_AUDIT_LOGGING=true

# Map and Geospatial
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Notification Configuration
VITE_PUSH_NOTIFICATIONS=true
VITE_EMAIL_NOTIFICATIONS=true
VITE_SMS_NOTIFICATIONS=false

# Testing Configuration
VITE_TEST_USER_EMAIL=test@qenergyz.com
VITE_TEST_API_TIMEOUT=10000
VITE_E2E_BASE_URL=http://localhost:3000